{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/lambda",
    "rootDir": "./src/lambda",
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/lambda/**/*"
  ],
  "exclude": [
    "src/lambda/**/*.test.ts",
    "src/lambda/**/__tests__/**/*"
  ]
}