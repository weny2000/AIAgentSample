# syntax=docker/dockerfile:1

# Ultra-lightweight runtime image
FROM python:3.11-alpine AS runtime

# Environment configuration
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    TOKENIZERS_PARALLELISM=false

# Install minimal system dependencies
RUN apk add --no-cache \
    git \
    gcc \
    musl-dev \
    libffi-dev \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Install Python dependencies
COPY service/requirements.lightweight.txt /tmp/requirements.txt
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r /tmp/requirements.txt && \
    pip cache purge

# Copy application source
COPY . /app/strands_agents

# Create non-root user
RUN adduser -D -u 10001 appuser && \
    chown -R appuser:appuser /app
USER appuser

# Runtime configuration
ENV APP_HOST=0.0.0.0 \
    APP_PORT=8000 \
    UVICORN_WORKERS=1 \
    LOG_LEVEL=info

EXPOSE 8000

# Start FastAPI app
CMD ["sh", "-c", "uvicorn strands_agents.service.app:app --host ${APP_HOST:-0.0.0.0} --port ${APP_PORT:-8000} --workers ${UVICORN_WORKERS:-1} --log-level ${LOG_LEVEL:-info}"]